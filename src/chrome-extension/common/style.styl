@require './box'
box-shadow()
  box-shadow 0px 0px 5px 1px rgba(0, 0, 0, 0.18)

@keyframes spin
    from
      transform rotate(0deg)
    to
      transform rotate(360deg)
.rc-spinning
  animation spin 4s infinite linear

body .Adapter_root.Adapter_right
  right 60px
.rc-auth-btn
.call-with-ringccentral-btn
  display inline-block
  vertical-align middle
  font-size 1rem
  padding .5625rem 1rem
  color #333
  border-radius .1875rem
  cursor pointer
  border 1px solid #aaa
  background #fff
.rc-tooltip
  position absolute
  left 0
  top 0
  display none
  z-index 100
  .call-with-ringccentral-btn
    position relative
    &:before
      content ''
      position absolute
      bottom -10px
      left 10px
      border-width 10px 10px 0
      border-style solid
      border-color #aaa transparent
      display block
      width 0
    &:after
      content ''
      position absolute
      bottom -9px
      left 11px
      border-width 9px 9px 0
      border-style solid
      border-color #fff transparent
      display block
      width 0

.animate
  transition all 0.5s

