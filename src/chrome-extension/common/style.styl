  bottom 0
  overflow-y scroll
  background #fff
  padding-top 50px
  z-index 9999
  box-shadow()

.rc-hide-to-side
  left -500px
  padding 0

.rc-hide-contact-panel
  left -300px

.rc-contact-header
  text-align right

.rc-close-contact
  font-size 20px
  color #333
  cursor pointer
  &:hover
    color #08c

.rc-item-value
.rc-item-label
  padding 5px 0

.rc-item-value
  font-weight bold
.rc-phone-span
  display block
  padding 5px
  color #08c
  cursor pointer
  &:hover
    color #333

.rc-init-ext-wrap
  position fixed
  left 50%
  bottom -26px
  margin-left -100px
  width 200px
  z-index 200
  text-align center
  height 26px
  &.rc-show-init
    bottom 0

.rc-loading
.rc-tp-contact-frame
  position absolute
  left 0
  width 100%
  height 100%
  background #fff
  z-index 100
.rc-close-box
  position absolute
  left 0
