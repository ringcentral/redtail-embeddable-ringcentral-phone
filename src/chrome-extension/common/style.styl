  z-index 200
.rc-contact-panel-loaded
  .rc-loading
    display none


.rc-contact-panel-loaded
  .rc-loading
    display none

.rc-sync-btns
  text-align right
.rc-sync-form
  position absolute
  z-index 100000
  background rgba(255,255,255, 1)
  overflow hidden
  left -300px
  width 300px
  bottom 40px
  height 460px
  box-shadow()
  border-right 3px solid #ff7a59
.rc-sync-show
  left 0
.rc-sync-input
  box-sizing border-box
  margin 0
  padding 0
  display inline-block
  padding 4px 11px
  width 100%
  line-height 1.5
  color rgba(0, 0, 0, 0.65)
  border 1px solid #d9d9d9
  border-radius 4px
  transition all .3s
  &:hover
    border-color #40a9ff
.rc-sync-btn
  line-height 1.5
  display inline-block
  text-align center
  touch-action manipulation
  cursor pointer
  border 1px solid transparent
  white-space nowrap
  padding 0 15px
  border-radius 3px
  height 32px
  user-select none
  transition all 0.3s cubic-bezier(0.645, 0.045, 0.355, 1)
  position relative
  box-shadow 0 2px 0 rgba(0, 0, 0, 0.015)
  color rgba(0, 0, 0, 0.65)
  background-color #fff
  border-color #d9d9d9
.rc-btn-submit
  background #08c
  color #fff

.rc-call-dds
  display none
  left -20px
  top 100%
  width 300px
  background #fff
  box-shadow()

.rc-call-dd
  padding 8px 10px
  cursor pointer
  border-bottom 1px solid #eee
  &:last-child
    border none
  &:hover
    background #08c
    color #fff


.rc-has-dd
  position relative
  height 33px
  width 163px
  z-index 888
  &:hover
    .rc-call-dds
      display block
      z-index 8888

.rc-phone-list
  background #fff
  padding 10px
  box-shadow()

.rc-msg-wrap
  position fixed
  left -200px
  top 50%
  width 200px
  padding 10px
  background #fff
  border-right 3px solid #ff7a59
  z-index 10000
  box-shadow()
.rc-msg-enter
  left 0
.rc-msg-type-success
  color #28a745
.rc-msg-type-warn
  color #ffc107
.rc-btn-wrapper
  margin-bottom 45px
  padding-left 15px
  margin-top -25px
.rc-wrapped #contact-masthead-shim
  margin-top 145px !important

.rc-sync-contact-button-wrap
  width 170px
  bottom 0
  top auto
  .rc-sync-tip
    height 0
    overflow hidden
  .pointer
    cursor pointer
    text-decoration underline
    &:hover
      color #333
  .rc-do-sync-contact
    color green
  .rc-no-sync-contact
    color red
  &:hover
    .rc-sync-tip
      height auto