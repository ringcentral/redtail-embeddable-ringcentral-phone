doctype html
html(lang='en')
  head
    meta(name='viewport', content='width=device-width, initial-scale=1')
    meta(charset='UTF-8')
    link(rel='icon' href='./favicon.ico' type='image/x-icon')
    link(rel='shortcut icon' href='./favicon.ico' type='image/x-icon')
    title RingCentral Embeddable Voice
    style.
      html, body {
        width: 100%;
        height: 100%;
        padding: 0;
        margin: 0;
      }
      #app {
        padding: 0;
        margin: 0;
        border: none;
        width: 100%;
        height: 100%;
        overflow: hidden
      }
      #header {
        height: 36px;
        line-height: 36px;
        width: 100%;
        text-align: center;
        background: #f3f3f3;
      }
      #logo {
        display: inline-block;
        margin-top: 10px;
        height: 16px;
        width: 100px;
      }
      iframe {
        border: none;
        height: calc(100% - 36px);
        width: 100%;
      }
  body
    #app
      header#header
        img#logo(src='./header_logo.svg')
      iframe#rc-widget-adapter-frame(src!='https://ringcentral.github.io/ringcentral-embeddable-voice/app.html' + appConfigQuery, sandbox='allow-same-origin allow-scripts allow-forms allow-popups', allow='microphone')
    script(src='./app.js?' + version)
