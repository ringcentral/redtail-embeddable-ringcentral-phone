{
  "name": "redtail embeddable ringcentral phone",
  "description": "RingCentral Embeddable Voice with chrome extension for redtail",
  "version": "0.0.4",
  "permissions": [
    "http://*/",
    "https://*/",
    "storage",
    "activeTab",
    "tabs",
    "background",
    "tabCapture",
    "system.display",
    "https://*.redtailtechnology.com/*"
  ],
  "page_action": {
    "default_icon": {
      "16": "icons/rc16.png",
      "32": "icons/rc32.png",
      "48": "icons/rc48.png",
      "128": "icons/rc128.png"
    }
  },
  "icons": {
    "16": "icons/rc16.png",
    "32": "icons/rc32.png",
    "48": "icons/rc48.png",
    "128": "icons/rc128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "https://*.redtailtechnology.com/*"
      ],
      "exclude_matches": [
        "https://smf.accounts.redtailtechnology.com/*"
      ],
      "js": [
        "./content.js"
      ]
    }
  ],
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": true
  },
  "content_security_policy": "script-src 'self' https://apps.ringcentral.com/integration/ringcentral-embeddable/0.1.0/index.html; object-src 'self'",
  "manifest_version": 2
}